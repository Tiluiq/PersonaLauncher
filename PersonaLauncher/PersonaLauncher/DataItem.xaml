<Grid x:Class="PersonaLauncher.DataItem"
	   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	   xmlns:local="clr-namespace:PersonaLauncher"
	   mc:Ignorable="d"
	   MouseLeftButtonUp="DataLeftClick"
	   >
	<Grid.ContextMenu>
		<ContextMenu>
			<MenuItem Header="ファイル選択" Click="FileSelect" />
			<MenuItem Header="ディレクトリ選択" Click="DirectorySelect" />
		</ContextMenu>
	</Grid.ContextMenu>
	<Image x:Name="image" Source="{Binding RelativeSource={RelativeSource AncestorType={x:Type Grid}},Path=ImageSource}"
		   Stretch="{Binding RelativeSource={RelativeSource AncestorType={x:Type Grid}},Path=ImageStretch}" />
	<TextBlock x:Name="textBlock" Text="{Binding fileOrDirectoryName}" TextAlignment="Center" VerticalAlignment="Center" />
</Grid>
