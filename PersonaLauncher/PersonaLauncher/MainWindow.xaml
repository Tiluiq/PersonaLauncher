<Window x:Class="PersonaLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonaLauncher"
        mc:Ignorable="d"
        Title="Persona Launcher" Height="600" Width="800"
		
		WindowStyle="None"
		AllowsTransparency="True"
		Background="Transparent"
		>

	<Canvas>
		<Image Name="Persona" Source="ペルソナ_立ち絵_背景_通常.png" Opacity="1"
			   Width="{Binding RelativeSource={RelativeSource Self}, Path=Source.PixelWidth}"
			   Height="{Binding RelativeSource={RelativeSource Self}, Path=Source.PixelHeight}" MouseLeftButtonDown="Persona_Drag" Canvas.Left="35" Canvas.Top="30"/>
		<Image Name="Data" Source="ファイル.png" Opacity="1" Stretch="Fill" MouseLeftButtonUp="Data_Click" Height="150" Width="150" Canvas.Left="600" Canvas.Top="30">
			<Image.Triggers>
				<EventTrigger RoutedEvent="Image.MouseLeftButtonUp">
					<BeginStoryboard>
						<Storyboard>
							<ObjectAnimationUsingKeyFrames
								Storyboard.TargetName="Persona"
								Storyboard.TargetProperty="(Image.Source)"
								Duration="0:0:8">
								<DiscreteObjectKeyFrame KeyTime="0:0:0">
									<DiscreteObjectKeyFrame.Value>
										<BitmapImage UriSource="ペルソナ_立ち絵_背景_通常.png" />
									</DiscreteObjectKeyFrame.Value>
								</DiscreteObjectKeyFrame>
								<DiscreteObjectKeyFrame KeyTime="0:0:1">
									<DiscreteObjectKeyFrame.Value>
										<BitmapImage UriSource="ペルソナ_立ち絵_背景_キャッチ.png" />
									</DiscreteObjectKeyFrame.Value>
								</DiscreteObjectKeyFrame>
								<DiscreteObjectKeyFrame KeyTime="0:0:4">
									<DiscreteObjectKeyFrame.Value>
										<BitmapImage UriSource="ペルソナ_立ち絵_背景_解放.png" />
									</DiscreteObjectKeyFrame.Value>
								</DiscreteObjectKeyFrame>
								<DiscreteObjectKeyFrame KeyTime="0:0:7">
									<DiscreteObjectKeyFrame.Value>
										<BitmapImage UriSource="ペルソナ_立ち絵_背景_通常.png" />
									</DiscreteObjectKeyFrame.Value>
								</DiscreteObjectKeyFrame>
							</ObjectAnimationUsingKeyFrames>
							
							<!-- データの移動 -->
							<DoubleAnimationUsingKeyFrames
								Storyboard.TargetName="Data"
								Storyboard.TargetProperty="(Canvas.Left)"
								Duration="0:0:8"
								>
								<DiscreteDoubleKeyFrame KeyTime="0:0:1" Value="600" />
								<LinearDoubleKeyFrame KeyTime="0:0:3" Value="425" />
								<DiscreteDoubleKeyFrame KeyTime="0:0:7" Value="600" />
							</DoubleAnimationUsingKeyFrames>
							<DoubleAnimationUsingKeyFrames
								Storyboard.TargetName="Data"
								Storyboard.TargetProperty="(Canvas.Top)"
								Duration="0:0:8"
								>
								<DiscreteDoubleKeyFrame KeyTime="0:0:1" Value="30" />
								<LinearDoubleKeyFrame KeyTime="0:0:3" Value="250" />
								<DiscreteDoubleKeyFrame KeyTime="0:0:4" Value="-200" /> <!-- 見えないところに移動？ -->
								<DiscreteDoubleKeyFrame KeyTime="0:0:7" Value="30" />
							</DoubleAnimationUsingKeyFrames>
						</Storyboard>
					</BeginStoryboard>
				</EventTrigger>
			</Image.Triggers>
		</Image>
	</Canvas>
</Window>
