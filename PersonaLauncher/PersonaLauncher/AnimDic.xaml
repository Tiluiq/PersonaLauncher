<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PersonaLauncher">
	<Storyboard x:Key="storyboard01">
		<!--<ObjectAnimationUsingKeyFrames Storyboard.Target="{Binding ElementName=Persona}"
									   Storyboard.TargetProperty="(Image.Source)"
									   Duration="0:0:7">-->
		<ObjectAnimationUsingKeyFrames Storyboard.Target="{Binding ElementName=Persona, Path=Children[0]}"
									   Storyboard.TargetProperty="(Image.Source)"
									   Duration="0:0:7">
			<DiscreteObjectKeyFrame KeyTime="0:0:0">
				<DiscreteObjectKeyFrame.Value>
					<BitmapImage UriSource="ペルソナ_立ち絵_通常.png" />
				</DiscreteObjectKeyFrame.Value>
			</DiscreteObjectKeyFrame>
			<DiscreteObjectKeyFrame KeyTime="0:0:1">
				<DiscreteObjectKeyFrame.Value>
					<BitmapImage UriSource="ペルソナ_立ち絵_キャッチ.png" />
				</DiscreteObjectKeyFrame.Value>
			</DiscreteObjectKeyFrame>
			<DiscreteObjectKeyFrame KeyTime="0:0:4">
				<DiscreteObjectKeyFrame.Value>
					<BitmapImage UriSource="ペルソナ_立ち絵_投げ.png" />
				</DiscreteObjectKeyFrame.Value>
			</DiscreteObjectKeyFrame>
			<DiscreteObjectKeyFrame KeyTime="0:0:7">
				<DiscreteObjectKeyFrame.Value>
					<BitmapImage UriSource="ペルソナ_立ち絵_通常.png" />
				</DiscreteObjectKeyFrame.Value>
			</DiscreteObjectKeyFrame>
		</ObjectAnimationUsingKeyFrames>
	</Storyboard>

    <Storyboard x:Key="RightLowerMoveBegin">
        <!-- データの移動 -->
        <DoubleAnimationUsingKeyFrames Storyboard.Target="{Binding ElementName=Data0}"
									   Storyboard.TargetProperty="(Grid.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.X)"
									   Duration="0:0:2.4"
									   >
            <DiscreteDoubleKeyFrame KeyTime="0:0:1" Value="600" />
            <EasingDoubleKeyFrame KeyTime="0:0:1.6" Value="675">
                <EasingDoubleKeyFrame.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
            <EasingDoubleKeyFrame KeyTime="0:0:2.4" Value="450">
                <EasingDoubleKeyFrame.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
        </DoubleAnimationUsingKeyFrames>
        <DoubleAnimationUsingKeyFrames Storyboard.Target="{Binding ElementName=Data0}"
                                       Storyboard.TargetProperty="(Grid.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.Y)"
                                       Duration="0:0:2.4"
                                       >
            <DiscreteDoubleKeyFrame KeyTime="0:0:1" Value="330" />
            <LinearDoubleKeyFrame KeyTime="0:0:2.4" Value="240" />
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>
    <Storyboard x:Key="RightLowerMoveEnd">
        <DoubleAnimationUsingKeyFrames Storyboard.Target="{Binding ElementName=Data0}"
									   Storyboard.TargetProperty="(Grid.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.X)"
                                       BeginTime="0:0:7"
									   Duration="0:0:0"
									   >
            <DiscreteDoubleKeyFrame KeyTime="0:0:0" Value="600" />
        </DoubleAnimationUsingKeyFrames>

        <DoubleAnimationUsingKeyFrames Storyboard.Target="{Binding ElementName=Data0}"
                                       Storyboard.TargetProperty="(Grid.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.Y)"
                                       BeginTime="0:0:7"
                                       Duration="0:0:0"
                                       >
            <DiscreteDoubleKeyFrame KeyTime="0:0:0" Value="330" />
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>
    
